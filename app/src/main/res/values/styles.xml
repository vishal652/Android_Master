<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />




    <style name="NavDrawerTextStyle" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">#848484</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:listDivider">@drawable/list_divider</item>
    </style>

    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>


    </style>

    <style name="TextLabel" parent="Base.TextAppearance.AppCompat.Headline">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#fca7a7a7</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_black</item>
        <item name="android:textAllCaps">false</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#53a7b3</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">#53a7b3</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
    <item name="android:textColor">#53a7b3</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/actionbar_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/actionbar_color</item>
        <item name="colorControlNormal">@color/actionbar_color</item>
        <item name="colorControlActivated">@color/actionbar_color</item>
    </style>
</resources>
